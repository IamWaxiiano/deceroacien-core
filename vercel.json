{
  "version": 2,
  "builds": [
    { "src": "api/server.mjs", "use": "@vercel/node" },
    { "src": "frontend/public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*\\.(?:js|css|png|jpg|jpeg|gif|svg|ico|json))$", "dest": "/frontend/public/$1" },
    { "src": "/(.*\\.(?:html))$", "dest": "/frontend/public/$1" },
    { "src": "^(?!.*\\.).*$", "dest": "/frontend/public/index.html" }
  ]
}